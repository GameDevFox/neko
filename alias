# this allows us to use "sudo" with aliases
alias sudo='sudo '

alias s='sudo '

# general
alias grep='grep --color=auto'
alias pd='pushd'
alias watch='watch --color'

# ls
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -al'
alias ls='ls --color=auto'

# bookmarks
alias bm='bookmark'
alias lbm='load-bookmarks'

# git
alias gb='git branch'
alias gbb='git branch -avv'
alias gco='git checkout'
alias gd='git diff'
alias gdd='git diff --staged'
alias gds='git diff --staged'
alias gl='git log'
alias gp='git pull'
alias gr='git reset HEAD'
alias grr='git reset --hard HEAD'
alias gs='git status'
alias gsh='git show'

# mobile
alias mobile-mode='source ~/royal-neko/mobile/mobile-mode'
alias mvim='vim -S ~/royal-neko/mobile/vimrc-mobile'

# dpkg and apt-*
alias ag='apt-get'
alias agg='apt-get install'
alias ac='apt-cache'
alias acc='apt-cache search'
alias af='apt-file'
alias aff='apt-file search'
alias dp='dpkg'

# pacman
alias pm='pacman'
alias pmq='pacman -Q'
alias pms='pacman -S'

alias pf='pkgfile'

# screen
alias sc='screen'
