alias gco='git checkout'
alias gd='git diff'
alias gdd='git diff --staged'
alias gds='git diff --staged'
alias gl='git log'
alias gp='git pull'
alias gpsh='git push'
alias gr='git reset HEAD'
alias grr='git reset --hard HEAD'
alias gs='git status'
alias gsh='git show'

# mobile
alias mobile-mode='source ~/royal-neko/mobile/mobile-mode'
