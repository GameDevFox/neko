#!/bin/bash

# Training
alias vim='echo "Try emacs instead" || true'

# sudo
alias sudo='sudo '
alias s='sudo'
alias se='sudo -E '

# man
alias man='man '

# general
alias dtime="date +$DTIME_FORMAT"
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias nl='nl -ba'
alias pu='pushd'
alias po='popd'
alias watch='watch --color'

# extra
alias neko-pull='git -C ~/royal-neko/ pull'
alias np='neko-pull'

# kubernetes
alias mk='minikube'
alias kc='kubectl'
alias kca='kubectl get -a all'
alias kcw='watch kubectl get -a all'

# ls
alias ls='ls --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -l'
alias lal='ls -Al'

# bookmarks
alias bm='bookmark'
alias lbm='load-bookmarks'

# git
alias gbb='git branch -avv'
alias gfa='git-fetch-all'
alias gll='git log --all --graph --decorate --oneline'
alias gr='git reset HEAD'
alias grr='git reset --hard HEAD'

# mobile
alias mobile-mode='source ~/royal-neko/os/mobile/mobile-mode'
alias mvim='vim -S ~/royal-neko/os/mobile/vimrc-mobile'

# dpkg and apt-*
alias agg='apt-get install'
alias acc='apt-cache search'
alias aff='apt-file search'

# pacman
alias pacman='pacman --color=auto'
alias pm='pacman'

# rm
alias rm="rm -ri"

# systemd
alias sc='systemctl'
alias scu='systemctl --user'

#tmux
alias tmux='tmux -2'

# youtube-dl
alias dl-playlist="youtube-dl -t 'http://www.youtube.com/playlist?list=PLVLjtsD2zOUOFGcXcGgUOMbaPIiK2NhgF'"

# emacs
alias emacs='emacs -nw'
alias em='emacsclient --alternate-editor="" -t'
alias emk="emacsclient -e '(kill-emacs)'"
alias elisp='emacs -nw --no-init-file --load'
alias emacs-upgrade='elisp ~/royal-neko/scripts/upgrade-emacs-packages'

# docker
alias dps='docker ps -a'
alias dc='docker-compose'
alias dm='docker-machine'

alias npv='mpv --geometry=600'
