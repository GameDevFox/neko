set number

" nvo modes
noremap qq `
noremap qQ ~
noremap q' ~

noremap qo [
noremap qp ]

noremap qO {
noremap q9 {
noremap qP }
noremap q0 }

noremap q<Up> \|
noremap q<Down> \
noremap q<Right> >
noremap q<Left> <

noremap q1 <Esc>

" ic modes
noremap! qq `
noremap! qQ ~
noremap! q' ~

noremap! qo [
noremap! qp ]

noremap! qO {
noremap! q9 {
noremap! qP }
noremap! q0 }

noremap! q<Up> \|
noremap! q<Down> \
noremap! q<Right> >
noremap! q<Left> <

noremap! q1 <Esc>
