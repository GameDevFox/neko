#!/bin/bash

# extend alias (trailing space aliases check next word for alias substitution)
alias man='man '
alias sudo='sudo '

# auto options
alias emacs='emacs -nw'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias ls='ls --color=auto'
alias nl='nl -ba'
alias pacman='pacman --color=auto'
alias rm="rm -ri"
alias tmux='tmux -2'
alias watch='watch --color'

# sudo
alias s='sudo'
alias se='sudo -E '

# general
alias dtime="date +$DTIME_FORMAT"
alias pu='pushd'
alias po='popd'

# extra
alias neko-pull='git -C ~/neko/ pull'
alias np='neko-pull'

# kubernetes
alias mk='minikube'
alias kc='kubectl'
alias kcga='kubectl get all'
alias kcc='kubectl config'
alias kcw='watch kubectl get all'

# ls
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -l'
alias lal='ls -Al'

# bookmarks
alias bm='bookmark'
alias lbm='load-bookmarks'

# git
alias g='git status'
alias ga='git add'
alias gam='git commit --amend --no-edit'
alias gb='git branch'
alias gbb='git branch -avv'
alias gcb='git branch | grep \* | awk '"'"'{ print $2 }'"'"
alias gc='git commit'
alias gca='git cherry-pick --no-commit'
alias gco='git checkout'
alias gd='git diff'
alias gdd='git diff --staged'
alias gf='git fetch --prune'
alias gfall='git-fetch-all'
alias gl='git log'
alias glb='git checkout $(git-last-branch)'
alias gll='git log --all --graph --decorate --oneline'
alias gm='git merge'
alias gp='git pull'
alias gpp='git push'
alias gr='git reset'
alias grr='git reset --hard HEAD'
alias grb='git rebase'
alias gri='git rebase -i'
alias gss='git status'

# dpkg and apt-*
alias agg='apt-get install'
alias acc='apt-cache search'
alias aff='apt-file search'

# pacman
alias pm='pacman'

# systemd
alias sc='systemctl'
alias scu='systemctl --user'

# docker
alias dps='docker ps -a'
alias dc='docker-compose'
alias dm='docker-machine'

# misc
alias he='hexedit'
alias npv='mpv --geometry=600'
alias xc='xclip -selection clipboard'

# gentoo
alias emerge='emerge --ask'
alias emerge-upgrade='emerge --verbose --update --deep --changed-use @world'
