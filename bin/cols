#!/bin/bash

tabs=''
while getopts "t" opt; do
	case "$opt" in
		t)
			tabs='\\t'
			;;
	esac
done
shift $(($OPTIND - 1))

if [ "$#" = 0 ]; then
	cat
else
	colNums="$(eval echo $(trace-args $@ | sed 's/-/../' | sed 's/[0-9]\+\.\.[0-9]\+/{\0}/' ))"
	awk "$(echo '{ print '$(echo "$colNums" | sed 's/[0-9]\+/$\0"'$tabs'",/g')' "" }')"
fi
