bookmark () {
	export $1="$(pwd)"
	echo "export $1=\"$(pwd)\"" >>! ~/royal-neko/local/bookmarks
}

load-bookmarks () {
	if [ -e ~/royal-neko/local/bookmarks ]; then
		source ~/royal-neko/local/bookmarks
	fi
}

gitignore () {
	if [ ! -f .gitignore ]; then
		echo ".gitignore" > .gitignore
	fi
	echo "$1" >> .gitignore
}
