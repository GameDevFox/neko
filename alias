# this allows us to use "sudo" with aliases

# sudo
alias sudo='sudo '
alias s='sudo'
alias se='sudo -E'

# general
alias dtime="date +$DTIME_FORMAT"
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias nl='nl -ba'
alias pu='pushd'
alias po='popd'
alias watch='watch --color'

# extra
alias neko-pull='git -C ~/royal-neko/ pull'
alias np='neko-pull'

# ls
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -al'
alias ls='ls --color=auto'

# bookmarks
alias bm='bookmark'
alias lbm='load-bookmarks'

# git
alias ga='git add'
alias gb='git branch'
alias gbb='git branch -avv'
